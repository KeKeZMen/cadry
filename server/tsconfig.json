{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@user": ["apps/cadry-server/src/user"],
      "@user/*": ["apps/cadry-server/src/user/*"],
      "@auth": ["apps/cadry-server/src/auth"],
      "@auth/*": ["apps/cadry-server/src/auth/*"],
      "@branch": ["apps/cadry-server/src/branch"],
      "@branch/*": ["apps/cadry-server/src/branch/*"],
      "@organization": ["apps/cadry-server/src/organization"],
      "@organization/*": ["apps/cadry-server/src/organization/*"],
      "@employee": ["apps/cadry-server/src/employee"],
      "@employee/*": ["apps/cadry-server/src/employee/*"],
      "@student": ["apps/cadry-server/src/student"],
      "@student/*": ["apps/cadry-server/src/student/*"],
      "@direction": ["apps/cadry-server/src/direction"],
      "@direction/*": ["apps/cadry-server/src/direction/*"],
      "@work-profession": ["apps/cadry-server/src/work-profession"],
      "@work-profession/*": ["apps/cadry-server/src/work-profession/*"],
      "@speciality": ["apps/cadry-server/src/speciality"],
      "@speciality/*": ["apps/cadry-server/src/speciality/*"],
      "@libs/database": ["libs/database/src"],
      "@libs/database/*": ["libs/database/src/*"],
      "@libs/rmq": ["libs/rmq/src"],
      "@libs/rmq/*": ["libs/rmq/src/*"],
      "@libs/decorators": ["libs/shared/src/decorators"],
      "@libs/decorators/*": ["libs/shared/src/decorators/*"],
      "@libs/utils": ["libs/shared/src/utils"],
      "@libs/utils/*": ["libs/shared/src/utils/*"]
    }
  }
}
